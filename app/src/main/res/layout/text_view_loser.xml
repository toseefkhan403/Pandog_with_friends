<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_borderColor="@color/teal_400"
        app:shape_roundRect_borderWidth="10dp"
        app:shape_roundRect_bottomLeftRadius="60dp"
        app:shape_roundRect_bottomRightRadius="60dp"
        app:shape_roundRect_topLeftRadius="60dp"
        app:shape_roundRect_topRightRadius="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="85sp"
            android:padding="25dp"
            android:text="Loser"
            android:fontFamily="@font/cursive"
            android:id="@+id/loser"
            android:visibility="visible"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:layout_height="70dp"
            android:visibility="gone"
            android:id="@+id/fonts">

            <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupL
                android:id="@+id/fontViewP"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupO
                android:id="@+id/fontViewO"
                android:layout_toRightOf="@+id/fontViewP"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
            <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupS
                android:id="@+id/fontViewS"
                android:layout_toRightOf="@+id/fontViewO"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
            <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupE
                android:id="@+id/fontViewT"
                android:layout_toRightOf="@+id/fontViewS"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
            <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupR
                android:id="@+id/fontViewT2"
                android:layout_toRightOf="@+id/fontViewT"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>



    </com.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>