<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <!-- ***********************Top Toolbar***************** -->
    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <include layout="@layout/snippet_top_profilebar" />

    </RelativeLayout>


    <!-- ********************Middle Section*************************** -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relLayout1">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:src="@drawable/ic_logo"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:id="@+id/pb"/>

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toseef"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/profile_photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="I am gonna build this app"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_below="@id/description"
            android:id="@+id/snippet"
            android:layout_marginTop="7dp">

            <include layout="@layout/snippet_middle_profile" />
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingBottom="50dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/snippet">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="show here the posts of this user and cover this
                    activity in a scroll view"/>

            </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>