<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/background">

    <TextView
        android:id="@+id/custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="The map shows all the people using Celfie and the list above it
displays the most popular among them. "
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginTop="150dp"/>


    <TextView
        android:id="@+id/custom"
        android:layout_below="@+id/custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fancy being on the top of the list? \n Go grab the black level now to be the best of them all! \n \n Visit the FAQ section for more details."
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />



    <TextView
        android:id="@+id/close_spotlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:text="Click anywhere to continue"
        android:textSize="20sp"
        android:textColor="@color/white"
        />


</RelativeLayout>
