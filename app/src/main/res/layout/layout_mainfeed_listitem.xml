<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


<include layout="@layout/layout_top_tabs"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginTop="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/theWholeView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relLayoutToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/white_pink_border_bottom">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_photo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="0.5dp" />


                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/profile_photo"
                            android:text="toseef.khan"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <com.android.toseefkhan.pandog.Utils.SquareImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@id/relLayoutToolbar"
                        android:layout_margin="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_logo" />


                    <RelativeLayout
                        android:id="@+id/relLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/post_image"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/heartLayout"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/image_heart_red"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/heart_red"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/image_heart_white"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/ic_heart"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/image_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 Likes"
                            android:layout_toRightOf="@id/heartLayout"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relLayout2"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/image_caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="This is another description #description"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/image_comments_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_caption"
                            android:layout_marginTop="2dp"
                            android:text="View all 3 comments"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/image_time_posted"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_below="@id/image_caption"
                            android:layout_toRightOf="@id/image_comments_link"
                            android:gravity="right"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:text="3 DAYS AGO"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            </RelativeLayout>

            <!--- ********************* second profile ***********************-->


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user2"
                android:layout_toRightOf="@+id/user1">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relLayoutToolbar2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/white_pink_border_bottom">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_photo2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="0.5dp" />


                        <TextView
                            android:id="@+id/username2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/profile_photo2"
                            android:text="toseef.khan"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <com.android.toseefkhan.pandog.Utils.SquareImageView
                        android:id="@+id/post_image2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@id/relLayoutToolbar"
                        android:layout_margin="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_logo" />


                    <RelativeLayout
                        android:id="@+id/relLayout22"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/post_image"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/heartLayout2"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/image_heart_red2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/heart_red"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/image_heart_white2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/ic_heart"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/image_likes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 Likes"
                            android:layout_toRightOf="@id/heartLayout2"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relLayout32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relLayout2"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/image_caption2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="This is another description #description"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/image_comments_link2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_caption2"
                            android:layout_marginTop="2dp"
                            android:text="View all 3 comments"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/image_time_posted2"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_below="@id/image_caption2"
                            android:layout_toRightOf="@id/image_comments_link2"
                            android:gravity="right"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:text="3 DAYS AGO"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            </RelativeLayout>


            </RelativeLayout>
        </HorizontalScrollView>


    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>