                                    android:layout_below="@id/heartLayout2"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/vieww2"/>

                                <TextView
                                    android:id="@+id/comments_link2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 comments"
                                    android:layout_below="@+id/heartLayout2"
                                    android:layout_marginStart="14dp"
                                    android:layout_toEndOf="@+id/vieww2"
                                    android:textColor="@color/darkgrey"
                                    android:textSize="18sp" />


                                <RelativeLayout
                                    android:id="@+id/relLayoutToolbar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/comments_link2">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/profile_photo2"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        app:civ_border_color="@color/black"
                                        app:civ_border_width="0.5dp" />

                                    <TextView
                                        android:id="@+id/username2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toRightOf="@+id/profile_photo2"
                                        android:text="toseef.khan"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />

                                </RelativeLayout>

                            </RelativeLayout>





                        </LinearLayout>


                    </android.support.v7.widget.CardView>




                </LinearLayout>



