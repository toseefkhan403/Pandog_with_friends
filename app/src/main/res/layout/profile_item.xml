<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/white_grey_border_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/main">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_color="@color/blue"
            app:civ_border_width="0.5dp"
            android:id="@+id/UserProfilePictureView"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="65dp"
            android:layout_centerVertical="true"
            android:id="@+id/progress_child"
            android:layout_marginLeft="25dp"
            android:layout_height="65dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/pb"
            android:visibility="gone"
            android:layout_marginStart="38dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/UserProfilePictureView"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/UserNameView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserNameView"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="@color/mediumgrey"
                android:id="@+id/UserEmailView"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserEmailView"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:textColor="@color/mediumgrey"
                    android:id="@+id/UserDistanceView"
                    />

            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:id="@+id/bestTag"
                android:visibility="invisible"
                android:src="@drawable/mostpopular"/>


        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
