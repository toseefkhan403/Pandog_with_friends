<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkred"
        app:cardCornerRadius="45dp"
        app:cardElevation="20dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/textDialog"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="14dp"
                android:text="Are you sure you want to log out?
Come on, we were enjoying it while you were here."
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/textDialog"
                android:layout_centerInParent="true">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I want to stay"
                    android:id="@+id/cancel"
                    android:layout_below="@+id/textDialog"
                    android:background="@drawable/white_rounded_small_button"
                    android:layout_centerInParent="true"
                    android:padding="15dp"/>

                <Button
                    android:id="@+id/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cancel"
                    android:layout_centerInParent="true"
                    android:background="@drawable/white_rounded_small_button"
                    android:layout_margin="10dp"
                    android:text="log out" />


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>