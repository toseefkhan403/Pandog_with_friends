<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/container"
    android:background="@drawable/white_pink_border_bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/NotifImageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:civ_border_color="@color/blue"
        android:background="@drawable/ic_logo"
        app:civ_border_width="0.5dp" />

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/pb"
        android:layout_centerVertical="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/NotifTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/NotifImageView"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:layout_margin="18dp"
        android:padding="1dp"
        tools:text="abc challenged you for what"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Click here to start a battle"
        android:textStyle="italic"
        android:textSize="14sp"
        android:id="@+id/status"
        android:textColor="@color/grey"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="110dp"
        />

</RelativeLayout>
