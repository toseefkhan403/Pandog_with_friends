<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_pink_border_bottom"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileToolBar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/back"
                    android:src="@drawable/ic_backarrow"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@+id/back"
                    android:layout_marginStart="8dp"
                    android:weightSum="100"
                    android:layout_height="50dp"
                    android:id="@+id/fonts">

                    <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupP
                        android:id="@+id/fontViewP"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="50dp"/>
                    <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupO
                        android:id="@+id/fontViewO"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="50dp"/>
                    <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupS
                        android:id="@+id/fontViewS"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="50dp"/>
                    <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupT
                        android:id="@+id/fontViewT"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="50dp"/>
                    <com.android.toseefkhan.pandog.Utils.LottieFontViewGroupS
                        android:id="@+id/fontViewS2"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="50dp"/>
                </LinearLayout>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

</merge>