<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center">
    <RelativeLayout
        android:id="@+id/SearchRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchProfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:background="@drawable/search_layout"
            android:focusable="true">

            <requestFocus />
        </androidx.appcompat.widget.SearchView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProfileList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/searchProfiles"
            android:visibility="invisible"/>

        <com.android.toseefkhan.pandog.Utils.InterceptRelativeLayout
            android:id="@+id/rela_intercept_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/searchProfiles"
            android:visibility="visible"
            android:layout_height="200dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/circle_red"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/circle_grey"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/circle_grey"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/circle_grey"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </com.android.toseefkhan.pandog.Utils.InterceptRelativeLayout>


        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_below="@id/rela_intercept_1"
            android:layout_centerHorizontal="true"
            android:id="@+id/trending"
            android:src="@drawable/heart_red"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TRENDING HASHTAGS OF THE WEEK"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:id="@+id/t"
            android:layout_below="@+id/trending"
            android:layout_centerHorizontal="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/holder_vertical"
            android:layout_below="@id/t"
            >

        </androidx.recyclerview.widget.RecyclerView>



    </RelativeLayout>

        <TextView
            android:id="@+id/EmptySearchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Users Found"
            android:visibility="gone"/>
    </FrameLayout>
    <!--bottom navigation view-->

    <include layout="@layout/layout_bottom_nav_view"/>

</RelativeLayout>