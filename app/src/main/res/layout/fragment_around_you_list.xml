<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_list_recycler_view">

    </androidx.recyclerview.widget.RecyclerView>


    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/permission_null"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uh-Oh! Looks like you haven't given the Location Permssion. Enable GPS to continue exploring!"
            android:gravity="center"
            android:id="@+id/tvNoPerms"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to enable GPS"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvNoPerms"
            android:padding="5dp"
            android:id="@+id/tvEnableGps"
            android:textColor="@color/blue_400"
            android:textSize="20sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/heart_red"
            android:layout_below="@+id/tvEnableGps"
            android:layout_centerInParent="true"
            android:padding="10dp"/>

    </RelativeLayout>

</RelativeLayout>
